{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "dist/src",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.graphql", "src/**/*.json"]
}
